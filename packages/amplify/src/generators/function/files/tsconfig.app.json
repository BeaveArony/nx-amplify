{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= offsetFromRoot %>dist/out-tsc",
    "module": "ESNext",
    "lib": ["ES2022"],
    "target": "ES2022",
    "sourceMap": false,
    "importHelpers": false,
    "declaration": false,
    "types": ["node"]
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "jest.config.ts"],
  "include": ["**/*.ts"]
}
